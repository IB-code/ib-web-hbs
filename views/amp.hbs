<body class="amp-template">
    {{#with main.blog}}
    <header class="main-header">
        <nav class="blog-nav">
            <a href="/"><amp-img src="/static/img/logos/text-logo.svg" width="400" height="50" layout="responsive"></amp-img></a>
        </nav>
    </header>

    <main class="content" role="main">
        <article class="post">

            <header class="post-header">
                <h1 class="post-title">{{attributes.title}}</h1>
                <section class="post-meta">
                    <p class="author">by {{attributes.author}}</p>
                    <time class="post-date" datetime="{{moment attributes.created 'YYYY-MM-DD'}}">{{moment attributes.created "MMMM DD, YYYY"}}</time> -
                    <time class="post-date nowrap" datetime="{{attributes.readTime}}m">{{attributes.readTime}} minute read</time>
                </section>
            </header>
            <figure class="post-image">
                <amp-img src="{{attributes.image}}" width="1200" height="630" layout="responsive"></amp-img>
            </figure>
            <section class="post-content">

                {{md body amp=true}}

            </section>
            <div class="social">
                <amp-social-share type="system"></amp-social-share>
                <amp-social-share type="email"></amp-social-share>
                <amp-social-share type="facebook"></amp-social-share>
                <amp-social-share type="gplus"></amp-social-share>
                <amp-social-share type="linkedin"></amp-social-share>
                <amp-social-share type="pinterest"></amp-social-share>
                <amp-social-share type="tumblr"></amp-social-share>
                <amp-social-share type="twitter"></amp-social-share>
                <amp-social-share type="whatsapp" layout="container" data-share-endpoint="whatsapp://send" data-param-text="Check out this article: {{attributes.title}} - {{url}}"></amp-social-share>
            </div>
        </article>
    </main>
    <footer class="site-footer clearfix">
        <section class="copyright"><a href="/">My Company</a> &copy; {{year}}</section>
    </footer>
    {{/with}}
</body>
