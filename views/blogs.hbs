<header class="section-hero">
    <div class="jumbotron mb-0 jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4 font-weight-bold">Blog</h1>
        </div>
    </div>
</header>
<section class="section-padding section-blogs py-5">
    <div class="container py-2">
        <div class="row justify-content-center">
            {{#each main.blogs}}
            <div class="card mx-md-4 my-2" style="width: 20rem;">
                <h5 class="card-header text-center">{{title}}</h5>
                <div class="lead-in m-3">{{leadIn}}</div>
                <div class="card-footer">
                    <a href={{link}}>
                        <button class="btn btn-sm float-right font-weight-500">Read More</button>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

