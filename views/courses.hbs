<header class="section-hero">
    <div class="jumbotron mb-0 jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4 font-weight-bold">Our Courses</h1>
            <h3 class="lead">Choose your path to a new career</h3>
        </div>
    </div>
</header>
<section class="courses section-padding bg-light">
    <div class="container">
        <div class="row">
            {{#each main.courses}}
            <div class="col-lg-4 col-md-6 my-2 text-center">
                <div class="card px-2">
                    <div class="card-body position-relative">
                        <div class="card-top">
                            <img class="iambham-logo mr-2 mb-4" src="{{logo}}" alt="{{headline}}">
                            <h4 class="card-title">{{headline}}</h4>
                            <div class="time d-flex justify-content-center align-items-center mb-2">
                                <i class="fa fa-{{subline.icon}} mr-2"></i>
                                <p class="text-grey mb-0">{{subline.text}}</p>
                            </div>
                        </div>
                        <p class="card-text">{{description}}</p>
                        <a class="btn btn-primary text-white position-absolute" href="{{action.href}}">{{action.text}}</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<section class="section-help section-padding bg-primary">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-md-6">
                <h4 class="text-white">Can't decide which course is right for you? Drop us a line. We're here to help!</h4>
            </div>
            <div class="col-md-6 text-center">
                <a href="/contact/" class="btn text-white btn-secondary">HELP ME PLEASE!</a>
            </div>
        </div>
    </div>
</section>
