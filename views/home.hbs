<header class="section-hero">
    <div class="jumbotron mb-0 jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4 font-weight-bold text-white mb-4">Equitable Economic Prosperity in our Tech Ecosystem
            </h1>



            <a href="/apply" rel="noopener noreferrer">
                <button type="button" class="shadow btn btn-primary mb-2">APPLY NOW</button>
            </a>
        </div>
    </div>
</header>
<section class="section-courses section-padding bg-light text-black">
    <div class="container">
        <div class="row justify-content-center">
            <h4 class="lead-in font-weight-500 text-center mb-4">Fueling Tech Talent for Employer Demands in the Heart
                of the Magic City</h4>
            <hr class="mb-5" />
        </div>

        <a href="/program/">
            <h3 class="text-center pb-3">Our Program</h3>
        </a>
        <div class="d-flex justify-content-center align-items-center flex-column">
            <div class="d-flex flex-row">
                <p class="mr-2">&#8226;</p>
                <h4 class="font-weight-bold">Applications for Web Development Bootcamp due July 21, 2021</h4>
                <p class="ml-2">&#8226;</p>
            </div>
            <div class="d-flex flex-row">
                <p class="mr-2">&#8226;</p>
                <h4 class="font-weight-bold mb-4">Applications for Data Analytics Bootcamp due July 28, 2021</h4>
                <p class="ml-2">&#8226;</p>
            </div>
        </div>
        <div class="row">
            {{#each main.programs}}
            <div class="col-lg-4 my-2">
                <a href={{url}}>
                    <div class="card text-center">
                        <div class="card-header">
                            <i class="{{icon}} mr-2"></i>{{headline}}
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <p class="card-text">{{description}}</p>
                        </div>
                    </div>
                </a>
            </div>
            {{/each}}
            <div class="col-lg-4 my-2">
                <a href="/program/services">
                    <div class="card text-center">
                        <div class="card-header d-flex justify-content-center" id="pd-program-card">
                            <img src="/public/img/profdev&supportserv/profdef&supportserv-icon-yellow.png"
                                alt="cartoon icon of person ascending to success" id="PD-icon">
                            <span class="pd-program-card-text">Professional Development & Supportive Services</span>
                        </div>
                        <div class="card-body d-flex justify-content-center align-items-center">
                            <p class="card-text">Mentorship, coaching and other supports to prepare participants for
                                employment</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="learn-more mt-4">
            <a href="/program">
                <button type="button" class="shadow btn" id="learn-more-btn">LEARN MORE</button>
            </a>
        </div>
    </div>
</section>
<section class="section-ncwit d-flex bg-primary justify-content-center mx-0">
    <div id="ncwit-container" class="container">
        <div id="ncwit-row-1" class="row">

            <div id="ncwit-pic" class="col-lg">
                <img class="img-fluid rounded shadow" src="../public/img/home/ncwit-banner.png" alt="" />
            </div>
            <div id="ncwit-text" class="col-lg ">
                <p class="text-white">Are you looking to enter the tech workforce? We have partnered with The National
                    Center for Women & Information Technology (NCWIT) to offer fully-funded scholarships for women in
                    Central Alabama to pursue a career in tech along with additional incentives upon becoming a
                    member
                    of NCWIT. </p>

                <div id="ncwit-perks" class="card ul-card bg-light shadow align-items-center">
                    <h6 class="card-title pb-0 mb-0">NCWIT Perks</h6>
                    <div class="card-body text-black">
                        <ul>
                            <li>Connecting with women throughout Alabama and the US with jobs</li>
                            <li>Professional development opportunities</li>
                            <li>Networking events</li>
                            <li>And more!</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
        <div id="more-ncwit-info" class="row text-white mt-2 justify-content-center mt-4">
            <h6>For more information on how to apply, email
                <a href="mailto:admissions@innovatebham.com">admissions@innovatebham.com</a>
        </div>
        </h6>
    </div>
</section>
<section class="section-video section-padding bg-light">
    <h4 class="text-center">What is Innovate Birmingham?</h4>
    <div id="video-container">
        <iframe width="1275" height="717" src="https://www.youtube.com/embed/ivJgkLQLi5U?modestbranding=1&rel=0"
            frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen></iframe>
    </div>
</section>
<section class="section-companies section-padding">
    <h4 class="text-center pb-4">See Where Our Graduates Are Being Hired</h4>
    <div class="carousel slide" data-interval="3000" data-ride="carousel">
        <div class="carousel-inner">
            {{#each main.hired}}
            <div class="carousel-item {{isFirstItem @index 'active'}}">
                <div class="row justify-content-center mt-4">
                    {{#each this}}
                    <a class="col-md-3 mb-4" href="{{url}}" target="_blank" rel="noreferrer noopener">
                        <div class="logo p-3 my-3" style="background-image: url('{{__logoPath}}')"></div>
                    </a>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
<section class="section-details section-padding bg-light">
    <div class="container">
        <h3 class="text-center pb-5">Why Choose Innovate Bham?</h3>
        <div class="row">
            {{#each main.benefits}}
            <div class="col-md-6 item">
                <div class="row mb-2">
                    <div class="text-center col-2">
                        <i class="{{icon}}"></i>
                    </div>
                    <div class="col-10 text-left">
                        <h5 class="font-weight-bold text-primary">{{headline}}</h5>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

