<header class="section-hero">
    <div class="jumbotron mb-0 jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4 font-weight-bold">Accelerated Career Development Programs</h1>
            <h3 class="lead">Similiar Fast-Track Programs Provided by Higher-Learning Institutions</h3>
            <a href="https://innovatebham.formstack.com/forms/application" target="_blank" rel="noopener noreferrer">
                <button class="btn btn-primary text-white">APPLY NOW</button>
            </a>
        </div>
    </div>
</header>
<section class="section-padding section-courses">
    {{#each main.courses}}
    <div class="card m-3 text-center" style="width: 25rem;">
        <img class="card-img-top mt-2" src="{{img}}" alt="university logo">
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            {{#if note}}
            <p class="card-text"><small>{{note}}</small></p>
            {{/if}}
            <div class="details-container font-weight-500 m-3">
                <img class="icon mr-1" src="/static/img/accelerated/icon_calendar.png" alt="calendar icon">
                <p class="card-text">{{courseLength}}</p>
            </div>
            <div class="details-container font-weight-500 m-3">
                <img class="icon mr-1" src="/static/img/accelerated/icon_clock.png" alt="old style clock icon">
                <p class="card-text">{{courseTime}}</p>
            </div>
            <div class="details-container font-weight-500 m-3">
                <img class="icon mr-1" src="/static/img/accelerated/icon_location.png" alt="location pin icon">
                <p class="card-text">{{courseLocation}}</p>
            </div>
            <button type="button" class="btn btn-primary" data-toggle="modal"
                data-target=".accelerated-course-{{id}}">Learn More</button>
        </div>
    </div>
    <div class="modal fade accelerated-course-{{id}}" tabindex="-1" role="dialog"
        aria-labelledby="accelerated-courses-{{id}}" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content text-center">
                <div class="card m-3 text-center">
                    <button type="button" class="close mt-1 mr-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">x</span>
                    </button>
                    <img class="card-img-top mt-2" src="{{img}}" alt="university logo">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        {{#if note}}
                        <p class="card-text"><small>{{note}}</small></p>
                        {{/if}}
                        <div class="details-container font-weight-500 m-3">
                            <img class="icon mr-2" src="/static/img/accelerated/icon_calendar.png" alt="calendar icon">
                            <p class="card-text">{{courseLength}}</p>
                        </div>
                        <div class="details-container font-weight-500 m-3">
                            <img class="icon mr-2" src="/static/img/accelerated/icon_clock.png"
                                alt="old style clock icon">
                            <p class="card-text">{{courseTime}}</p>
                        </div>
                        <div class="details-container font-weight-500 m-3">
                            <img class="icon mr-2" src="/static/img/accelerated/icon_location.png"
                                alt="location pin icon">
                            <p class="card-text">{{courseLocation}}</p>
                        </div>
                        <p class="font-weight-500">{{courseDescription}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>

